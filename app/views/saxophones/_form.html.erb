    <%= simple_form_for(@saxophone) do |f| %>
      <%= f.input :title, label: "Título:" %>
      <%= f.input :details, label: "Descrição:" %>
      <%= f.input :price, label: "Preço:" %>
      <%= f.input :photo, as: :file %>
      <%= f.input :category, collection: Saxophone::CATEGORIES, label: "Categoria:" %>
      <%= f.input :manufacturer, collection: Saxophone::MANUFACTURERS, label: "Fabricante:" %>
      <%= f.input :sax_model, collection: Saxophone::MODELS, label: "Modelo:" %>
      <%= f.input :serial_number, label: "Número de série:" %>
      <%= f.input :condition, collection: Saxophone::CONDITIONS, label: "Condição:" %>
      <%= f.button :submit, 'Criar anúncio', class: 'btn btn-primary mt-3' %>
    <% end %>
