<div class="row justify-content-center mt-5">
  <div class="col-10 p-5 d-flex gap-3 show-card">
    <div class="status">
      <% if @saxophone.status == true %>
        <p class="btn btn-outline-secondary btn-sm">Vendido</p>
      <% else %>
        <p class="btn btn-success btn-sm text-light">Disponível</p>
      <% end %>
    </div>
    <div class="picture">
      <% url = "" %>
      <% if @saxophone.photo.key
          url = cloudinary_url @saxophone.photo.key
        else
          url = "https://i.pinimg.com/564x/2f/2f/58/2f2f5837fffa68b9b300c99eee660268.jpg"
        end
      %>
      <img src= <%=url%> class="sax-picture me-2" alt="...">
    </div>
    <div class="info">
      <h1 class="mb-3"><%= @saxophone.title %></h1>
      <div class="d-flex gap-3">
        <p><strong> Fabricante: </strong><%= @saxophone.manufacturer %></p>
        <p><strong> Modelo: </strong><%= @saxophone.sax_model %></p>
        <p><strong> Categoria: </strong><%= @saxophone.category %></p>
      </div>
      <p class="card-details"><%= @saxophone.details %></p>
      <p><strong> Número de série: </strong><%= @saxophone.serial_number %></p>
      <p><strong> Preço: </strong><%= number_to_currency_br(@saxophone.price) %></p>
      <p><strong> Estado: </strong><%= @saxophone.condition %></p>
      <div class="d-flex gap-3">
    </div>

      <% if @saxophone.user != current_user %>
        <%= link_to "Comprar", new_saxophone_order_path(@saxophone), class: "btn btn-primary shadow-sm" %>
      <% end %>

      <%= link_to "Outros produtos deste vendedor",  user_saxophones_path(@saxophone.user), class: "btn btn-light border rounded-2 shadow-sm" %>

      <% if policy(@saxophone).edit? %>
        <%= link_to "Editar", edit_saxophone_path(@saxophone), class: "btn btn-secondary" %>
      <% end %>
      <%= link_to "Remover", saxophone_path(@saxophone), data: {turbo_method: :delete, turbo_confirm: 'Você tem certeza?'}, class: "btn btn-danger text-light" if policy(@saxophone).destroy?%>
    </div>
  </div>
</div>
