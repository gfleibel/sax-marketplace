<div class="container">
  <h1 class="text-start mt-4 mb-4">Saxofones de <%= @user.full_name %></h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @saxophones.each do |sax| %>
      <div class="col-3 d-flex justify-content-center">
        <div class="card p-3 d-flex d-column align-items-center justify-content-center" style="width: 20em;">
          <% url = "" %>
          <% if sax.photo.key
              url = cloudinary_url sax.photo.key
            else
              url = "https://i.pinimg.com/564x/2f/2f/58/2f2f5837fffa68b9b300c99eee660268.jpg"
            end
          %>
          <img src= <%=url%> class="sax-picture" alt="...">
          <div class="card-body d-flex justify-content-between mt-2 p-0 gap-2">
            <p class="card-text fw-bold "><%= sax.title %></p>
            <p class="card-text card-title"><%= number_to_currency_br(sax.price) %></p>
          </div>
          <%= link_to "Saiba Mais", saxophone_path(sax), class: "btn border fw-bold rounded"%>
          <% if policy(sax).edit? %>
            <%= link_to "Editar", edit_saxophone_path(sax) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
