<div class="container">
  <h1 class="text-start mt-4 mb-4">Saxofones de <%= @user.full_name %></h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @saxophones.each do |sax| %>
      <div class="col-3 d-flex justify-content-center">
        <div class="card p-3 d-flex d-column align-items-center justify-content-center rounded-4 my-shadow shadow" style="width: 400px; height: 560px">

          <% url = "" %>
          <% if sax.photo.key
              url = cloudinary_url sax.photo.key
            else
              url = "https://i.pinimg.com/564x/2f/2f/58/2f2f5837fffa68b9b300c99eee660268.jpg"
            end
          %>
          <div class="img-container-card">
            <img src= <%=url%> class="p-2" alt="...">
          </div>


          <div class="card-body d-flex w-100 justify-content-between mt-2 p-0 gap-2">
            <p class="card-text fw-bold "><%= sax.title %></p>
            <p class="card-text card-title"><%= number_to_currency_br(sax.price) %></p>
          </div>

          <%= link_to "Detalhes", saxophone_path(sax), class: "btn border fw-bold mb-2 w-100 rounded-4 shadow"%>
          <% if policy(sax).edit? %>
            <%= link_to edit_saxophone_path(sax), class: "btn btn-primary mb-2 w-100" do %>
              <i class="fa-regular fa-pen-to-square " style="color: #ffffff;"></i> Editar
            <% end %>
          <% end %>
          <%= link_to "Remover", saxophone_path(sax), data: {turbo_method: :delete, turbo_confirm: 'VocÃª tem certeza?'}, class: "btn btn-danger text-light w-100" if policy(sax).destroy?%>
        </div>
      </div>
    <% end %>
  </div>
</div>
