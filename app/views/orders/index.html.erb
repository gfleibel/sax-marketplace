<h1>Meus pedidos</h1>

<% @orders.each do |order| %>
  <div class="row justify-content-center mt-5">
    <div class="col-10 p-5 d-flex gap-3 show-card">
      <div class="status">
        <p><strong> Pedido #</strong><%= order.id %></p>
        <p><strong> Comprado em: </strong><%= order.created_at %></p>
        <% if order.saxophone.status == true %>
          <p class="btn btn-outline-secondary btn-sm">Vendido</p>
        <% else %>
          <p class="btn btn-success btn-sm text-light">Disponível</p>
        <% end %>
      </div>
      <div class="picture">
        <% url = "" %>
        <% if order.saxophone.photo.key
            url = cloudinary_url order.saxophone.photo.key
          else
            url = "https://i.pinimg.com/564x/2f/2f/58/2f2f5837fffa68b9b300c99eee660268.jpg"
          end
        %>
        <img src= <%=url%> class="sax-picture me-2" alt="...">
      </div>
      <div class="info">
        <h1 class="mb-3"><%= order.saxophone.title %></h1>
        <div class="d-flex gap-3">
          <p><strong> Fabricante: </strong><%= order.saxophone.manufacturer %></p>
          <p><strong> Modelo: </strong><%= order.saxophone.sax_model %></p>
          <p><strong> Categoria: </strong><%= order.saxophone.category %></p>
        </div>
        <p class="card-details"><%= order.saxophone.details %></p>
        <p><strong> Número de série: </strong><%= order.saxophone.serial_number %></p>
        <p><strong> Preço: </strong><%= number_to_currency_br(order.saxophone.price) %></p>
        <p><strong> Estado: </strong><%= order.saxophone.condition %></p>
        <p><strong> Vendedor: </strong><%= order.saxophone.user.full_name %></p>
        <div class="d-flex gap-3">
      </div>
        <%= link_to "Outros produtos deste vendedor",  user_saxophones_path(order.saxophone.user), class: "btn btn-light border rounded-2 shadow-sm" %>
      </div>
    </div>
  </div>
<% end %>
