<div class="banner-small" style="background-image: linear-gradient(to bottom, rgba(255, 179, 0, 0), rgba(0, 0, 0, 1)), url(https://c0.wallpaperflare.com/preview/857/353/296/music-saxophone-summer-gold.jpg);">
  <div class="container">
    <h1 class="page-title text-start mt-2 mb-2">Meus pedidos</h1> </div>
  </div>
</div>

<div class="container mb-5">
  <% @orders = @orders.sort_by(&:id).reverse %>
  <div class="row flex-column justify-content-center my-5 gap-3">
    <% @orders.each do |order| %>
        <div class="col-12 d-flex gap-3 show-card">

          <div class="picture">
            <% url = "" %>
            <% if order.saxophone.photo.key
                url = cloudinary_url order.saxophone.photo.key
              else
                url = "https://i.pinimg.com/564x/2f/2f/58/2f2f5837fffa68b9b300c99eee660268.jpg"
              end
            %>
            <img src= <%=url%> class="sax-picture" alt="...">
          </div>

          <div class="info m-5">
            <div>
              <h1 class="mb-3"><%= order.saxophone.title %></h1>
              <div class="d-flex gap-3">
                <p><strong> Fabricante: </strong><%= order.saxophone.manufacturer %></p>
                <p><strong> Modelo: </strong><%= order.saxophone.sax_model %></p>
                <p><strong> Categoria: </strong><%= order.saxophone.category %></p>
              </div>
              <p class="card-details"><%= order.saxophone.details %></p>
              <p><strong> Número de série: </strong><%= order.saxophone.serial_number %></p>
              <p><strong> Preço: </strong><%= number_to_currency_br(order.saxophone.price) %></p>
              <p><strong> Estado: </strong><%= order.saxophone.condition %></p>
            </div>
            <%= link_to "Outros produtos deste vendedor",  user_saxophones_path(order.saxophone.user), class: "btn btn-light border rounded-2 shadow-sm w-50" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
